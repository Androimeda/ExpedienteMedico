  public function filas($query){
    $registros = [];
    if($this->do){
      while($registro = oci_fetch_array($query, OCI_ASSOC + OCI_RETURN_NULLS)){
        $registros[]=$registro;
      }
      oci_free_statement($query);
      return $registros;
    }else{
      return null;
    }
  }

